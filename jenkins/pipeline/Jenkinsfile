pipeline {
    agent any
    
    stages {
        
        stage('Terraform') {

            agent {
                dockerfile {
                    filename 'Dockerfile'
                    dir 'jenkins/terraform-slave'
                    // mount workspace with pulled repository so terraform state is not lost.
                    args '-v $WORKSPACE:/var/git --env-file $HOME/creds.env'
                }
            }
            
            steps {
                sh 'ls -lah /'
                sh 'ls -lah /var/git'
                sh 'cd /var/git/terraform && terraform init && terraform apply -auto-approve'
                
            }
            
        }
        
    }
}

