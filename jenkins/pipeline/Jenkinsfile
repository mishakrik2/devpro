pipeline {
    agent any
    
    stages {
        
        stage('Terraform') {

            agent {
                dockerfile {
                    filename 'Dockerfile'
                    dir 'jenkins/terraform-slave'
                    args '-v $HOME:/var/git'
                }
            }
            
            steps {
                sh 'ls -lah /var/git'
                sh 'cd /var/git && terraform init'
            }
            
        }
        
    }
}